<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="10">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/colorToolBar"
        android:id="@+id/toolbarOcr"
        app:title="@string/result"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="#FFF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessLeaf"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Result"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimary"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="all"
                            android:padding="5dp"
                            android:textColor="#000"
                            android:autofillHints="" />



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessLeaf"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Image Preview"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimary"
                            tools:ignore="HardcodedText"
                            android:layout_marginBottom="5dp"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/imageResult"
                            android:layout_width="330dp"
                            android:layout_height="330dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/btnEditImage"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Edit Image"
                    android:drawableTop="@drawable/ic_edit"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/btnCopy"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Copy"
                    android:drawableTop="@drawable/ic_copy"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/importTxt"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Import txt"
                    android:drawableTop="@drawable/ic_text"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/importPDF"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Import Pdf"
                    android:drawableTop="@drawable/ic_pdf"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/share"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:drawableTop="@drawable/ic_share"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/btnUpdate"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:drawableTop="@drawable/ic_upload"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:id="@+id/btnDelete"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:drawableTop="@drawable/ic_delete"
                    android:textSize="20sp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>





</LinearLayout>